{
  "name": "luka-package-demo",
  "version": "1.0.0",
  "description": "A demo package for Total TypeScript",
  "keywords": [
    "demo",
    "typescript"
  ],
  "homepage": "https://github.com/LPendelj",
  "bugs": {
    "url": "https://github.com/LPendelj/luka-package-demo/issues"
  },
  "author": "Luka Pendelj <pendeljluka@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LPendelj/luka-package-demo"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "type": "module",
  "license": "MIT",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.4",
    "@changesets/cli": "^2.28.1",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  },
  "scripts": {
    "build": "tsc",
    "ci": "npm run build && npm run check-format && npm run check-exports && npm run test",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "test": "vitest run",
    "dev": "vitest",
    "local-release": "changeset version && changeset publish",
    "prepublishOnly": "npm run ci"
  }
}
